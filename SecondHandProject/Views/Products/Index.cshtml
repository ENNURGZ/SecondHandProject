@model IEnumerable<SecondHandProject.ViewModels.ProductViewModels.ProductListViewModel>

@{
    ViewData["Title"] = "Ürünlerim";
}

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Ürünlerim</h2>

        <a href="/Products/Create" class="btn btn-primary px-4">
            + Yeni Ürün Ekle
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            Henüz bir ürün eklemediniz.
            <a href="/Products/Create" class="fw-bold">Buraya tıklayarak ürün ekleyebilirsiniz.</a>
        </div>
    }
    else
    {
        <div class="row g-4">

            @foreach (var item in Model)
            {
                <div class="col-md-3 col-sm-6">

                    <div class="card shadow-sm h-100 product-card">

                        @if (!string.IsNullOrEmpty(item.ImagePath))
                        {
                            <img src="~/images/products/@item.ImagePath"
                                 class="card-img-top"
                                 style="height: 200px; object-fit: cover;"
                                 alt="Ürün Görseli" />
                        }
                        else
                        {
                            <img src="~/images/no-image.png"
                                 class="card-img-top"
                                 style="height: 200px; object-fit: cover;"
                                 alt="Görsel Yok" />
                        }


                        <div class="card-body">
                            <h5 class="card-title">@item.Title</h5>
                            <p class="card-text text-muted">@item.CategoryName</p>

                            <h5 class="fw-bold">@item.Price ₺</h5>
                        </div>

                        <div class="card-footer bg-white border-0 d-flex justify-content-between">

                            <a href="/Products/Edit/@item.Id" class="btn btn-sm btn-outline-primary w-50 me-2">
                                Düzenle
                            </a>

                            <a href="/Products/Delete/@item.Id"
                               onclick="return confirm('Bu ürünü silmek istediğinize emin misiniz?');"
                               class="btn btn-sm btn-outline-danger w-50">
                                Sil
                            </a>

                        </div>

                    </div>

                </div>
            }

        </div>
    }
</div>

<style>
    .product-card:hover {
        transform: translateY(-4px);
        transition: all .2s ease-in-out;
    }
</style>
