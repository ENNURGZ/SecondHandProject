@model SecondHandProject.ViewModels.CategoryViewModel

@{
    ViewData["Title"] = "Kategori Düzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">

    <h2 class="fw-bold mb-4">Kategori Düzenle</h2>

    <div class="row">
        <div class="col-md-6">

            <form asp-action="Edit" method="post">

                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-semibold"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary px-4">Güncelle</button>
                <a href="/Categories/Index" class="btn btn-secondary px-4 ms-2">İptal</a>

            </form>

        </div>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
