@model IEnumerable<SecondHandProject.ViewModels.ProductViewModels.ProductListViewModel>


@{
    ViewData["Title"] = "Ürün Yönetimi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container-fluid mt-4">


    <h2 class="fw-bold mb-4">Ürün Yönetimi</h2>


    <div class="card shadow-sm">
        <div class="card-body">


            <table class="table table-striped table-bordered align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Fotoğraf</th>
                        <th>Başlık</th>
                        <th>Kategori</th>
                        <th>Fiyat</th>
                        <th>Satıcı</th>
                        <th style="width:140px;">İşlemler</th>
                    </tr>
                </thead>


                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @if (!string.IsNullOrEmpty(item.ImagePath))
                                {
                                    <img src="~/images/products/@item.ImagePath"
                                         class="card-img-top"
                                         style="height:200px; object-fit:cover;" />
                                }
                                else
                                {
                                    <img src="~/images/no-image.png"
                                         class="card-img-top"
                                         style="height:200px; object-fit:cover;" />
                                }

                            </td>
                            <td>@item.Title</td>
                            <td>@item.CategoryName</td>
                            <td>@item.Price ₺</td>
                            <td>@item.SellerName</td>
                            <td>
                                <a href="/Admin/DeleteProduct/@item.Id"
                                   onclick="return confirm('Bu ürünü silmek istediğinize emin misiniz?');"
                                   class="btn btn-sm btn-danger w-100">
                                    Sil
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>


        </div>
    </div>
</div>